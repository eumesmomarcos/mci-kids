  <main>
    <form id="formOferta">
      <h3>Registrar Oferta</h3>

      <label>Valor:</label>
      <input type="number" id="valor" required>

      <label>Data:</label>
      <input type="date" id="data" required>

      <label>Respons√°vel:</label>
      <input type="text" id="responsavel" required>

      <label>Tipo:</label>
      <select id="tipo">
        <option value="entrada">Entrada</option>
        <option value="gasto">Gasto</option>
      </select>

      <label>Descri√ß√£o:</label>
      <input type="text" id="descricao">

      <button type="submit">Salvar Oferta</button>
    </form>
  </main>

  <script>
    document.getElementById("formOferta").addEventListener("submit", async (e) => {
      e.preventDefault();

      const oferta = {
        valor: parseFloat(document.getElementById("valor").value),
        data: document.getElementById("data").value,
        responsavel: document.getElementById("responsavel").value,
        tipo: document.getElementById("tipo").value,
        descricao: document.getElementById("descricao").value
      };

      try {
        await db.collection("Ofertas").add(oferta);
        alert("‚úÖ Oferta registrada com sucesso!");
        document.getElementById("formOferta").reset();
      } catch (error) {
        console.error("Erro ao salvar:", error);
        alert("‚ùå Erro ao registrar oferta.");
      }
    });
  </script>
