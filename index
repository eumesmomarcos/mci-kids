  <main>
    <form id="formOferta" autocomplete="on">
      <h3>Registrar oferta</h3>

      <label for="valor">Valor</label>
      <input type="number" id="valor" min="0" step="0.01" placeholder="Ex.: 50.00" required />

      <label for="data">Data</label>
      <input type="date" id="data" required />

      <label for="responsavel">ResponsÃ¡vel</label>
      <input type="text" id="responsavel" placeholder="Nome de quem registrou" required />

      <label for="tipo">Tipo</label>
      <select id="tipo" required>
        <option value="entrada">Entrada</option>
        <option value="gasto">Gasto</option>
      </select>

      <label for="descricao">DescriÃ§Ã£o</label>
      <input type="text" id="descricao" placeholder="Opcional" />

      <button type="submit">Salvar oferta</button>
      <div id="mensagem" class="msg" aria-live="polite"></div>
    </form>
  </main>

  <script>
    const form = document.getElementById("formOferta");
    const msg = document.getElementById("mensagem");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      msg.textContent = "";
      msg.className = "msg";

      const valor = parseFloat(document.getElementById("valor").value);
      const data = document.getElementById("data").value;
      const responsavel = document.getElementById("responsavel").value.trim();
      const tipo = document.getElementById("tipo").value;
      const descricao = document.getElementById("descricao").value.trim();

      if (Number.isNaN(valor) || valor < 0) {
        msg.textContent = "Valor invÃ¡lido.";
        msg.classList.add("err");
        return;
      }
      if (!data) {
        msg.textContent = "Informe a data.";
        msg.classList.add("err");
        return;
      }
      if (!responsavel) {
        msg.textContent = "Informe o responsÃ¡vel.";
        msg.classList.add("err");
        return;
      }

      const oferta = {
        valor,
        data,
        responsavel,
        tipo,
        descricao,
        criadoEm: firebase.firestore.FieldValue.serverTimestamp()
      };

      try {
        await db.collection("Ofertas").add(oferta);
        msg.textContent = "âœ… Oferta registrada com sucesso!";
        msg.classList.add("ok");
        form.reset();
      } catch (error) {
        console.error("Erro ao salvar:", error);
        msg.textContent = "âŒ Erro ao registrar oferta. Tente novamente.";
        msg.classList.add("err");
      }
    });
  </script>
